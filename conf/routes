# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /page/:number               controllers.HomeController.page(number: Integer)
GET     /post/:id                   controllers.HomeController.show(id: String)
DELETE  /post/:id                   controllers.HomeController.remove(id: String)
GET     /create                     controllers.HomeController.create()
+ nocsrf
POST    /save                       controllers.HomeController.save()
+ nocsrf
POST     /post/:id                  controllers.HomeController.update(id: String)
GET     /post/:id/edit              controllers.HomeController.edit(id: String)
+ nocsrf
POST     /auth                     controllers.HomeController.authenticate()
GET     /login                     controllers.HomeController.login()
GET     /logout                     controllers.HomeController.logout()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

